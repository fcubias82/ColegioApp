<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ColegioApp.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            
            <Frame VerticalOptions="Center" Margin="10,20,10,0">
                <StackLayout>
                    <Image Source="logo.png" Margin="0,10,0,0" />
                    <Entry x:Name="txtUsuario" Placeholder="USUARIO" />
                    <Entry x:Name="txtContrasenia" Placeholder="CONTRASEÑA" IsPassword="True" />
                    <Button x:Name="btnIngresar" Text="INGRESAR" BackgroundColor="Blue" TextColor="White" Margin="10,0,10,0" Clicked="btnIngresar_Clicked" />
                    <Label Text="Aplicación creada por: Fernando Cubías" VerticalOptions="End" Margin="10,0,0,0"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>